{
  "name": "vheer-clone",
  "version": "1.0.0",
  "description": "AI Image Generation Platform",
  "main": "server/index.js",
  "scripts": {
    "predev": "powershell -ExecutionPolicy Bypass -File kill-ports.ps1",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && set PORT=5000 && nodemon index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:all": "npm run build && cd server && npm run build",
    "start": "node server/index.js",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npx eslint . --ext .js",
    "lint:client": "cd client && npm run lint",
    "prisma:generate": "cd server && npx prisma generate",
    "prisma:migrate": "cd server && npx prisma migrate dev",
    "prisma:studio": "cd server && npx prisma studio",
    "prisma:deploy": "cd server && npx prisma migrate deploy",
    "check:security": "npm audit && cd server && npm audit && cd ../client && npm audit",
    "check:env": "node scripts/check-env.js",
    "pre-deploy": "npm run prisma:generate && npm run build"
  },
  "keywords": [
    "ai",
    "image-generation",
    "web-app"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.24.0",
    "pg": "^8.16.3",
    "replicate": "^0.25.0",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
