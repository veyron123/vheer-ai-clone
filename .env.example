# =============================================
# Vheer AI Environment Configuration
# =============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# =============================================
# DATABASE
# =============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/vheer_db

# =============================================
# SERVER CONFIGURATION
# =============================================
# Server port
PORT=5000

# Node environment: development, production, test
NODE_ENV=development

# Base URL of your application
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# =============================================
# SECURITY
# =============================================
# JWT secret for token generation (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here

# JWT token expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRE=7d

# Session secret for OAuth (min 32 characters)
SESSION_SECRET=your-very-long-and-secure-session-secret-here

# =============================================
# CORS CONFIGURATION
# =============================================
# Allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:5173

# =============================================
# AI API KEYS (Required)
# =============================================
# Flux AI API
FLUX_API_KEY=your-flux-api-key-here
FLUX_API_URL=https://api.bfl.ai/v1/flux-kontext-pro

# GPT Image API
GPT_IMAGE_API_KEY=your-gpt-image-api-key-here
GPTIMAGE_API_URL=https://api.gptimage.com

# ImgBB Storage API
IMGBB_API_KEY=your-imgbb-api-key-here

# MidJourney API (Optional)
MIDJOURNEY_API_KEY=
MIDJOURNEY_API_URL=

# =============================================
# CLIENT ENVIRONMENT VARIABLES
# =============================================
# Variables starting with VITE_ are accessible in the client
VITE_API_URL=http://localhost:5000/api
VITE_FAL_API_KEY=
VITE_FLUX_API_KEY=

# =============================================
# OAUTH CONFIGURATION (Optional)
# =============================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=