# Production Environment Variables for Render
# Copy this to your Render environment variables

# Database (Render will provide)
DATABASE_URL="your-render-postgres-connection-string"

# JWT Secret (generate strong secret)
JWT_SECRET="your-production-jwt-secret-256-bit"

# Session Secret (generate strong secret)
SESSION_SECRET="your-production-session-secret-256-bit"

# Google OAuth (production credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Flux API
FLUX_API_KEY="2f58d1ef-d2d1-48f0-8c1f-a7b5525748c0"
FLUX_API_URL="https://api.bfl.ai/v1/flux-kontext-pro"

# GPT Image API
GPT_IMAGE_API_KEY="your-gpt-image-api-key"
GPT_IMAGE_API_URL="https://api.kie.ai/api/v1/gpt4o-image/generate"

# ImgBB API
IMGBB_API_KEY="your-imgbb-api-key"

# ðŸš€ CLOUDINARY (Required for Render image storage)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"  
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Server Configuration
NODE_ENV="production"
PORT="10000"
SERVER_URL="https://your-render-service.onrender.com"

# CORS Origins (add your frontend domains)
CORS_ORIGIN="https://your-frontend-domain.onrender.com"